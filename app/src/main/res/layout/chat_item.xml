<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="-5dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loaging"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:layout_toRightOf="@id/userImageChatCard"
            android:layout_marginLeft="15dp"
            android:id="@+id/nameOfChat"
            android:textStyle="bold"
            android:textColor="@color/chat_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/offline"
            android:textSize="13sp"
            android:layout_toRightOf="@id/userImageChatCard"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="3dp"
            android:id="@+id/statusOfUser"
            android:layout_below="@id/nameOfChat"
            android:textColor="@color/grey"/>

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/userImageChatCard"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
             app:cardCornerRadius="55dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_account_box_24"
                android:id="@+id/userImageChat"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/chat_line"
            android:layout_alignParentBottom="true" />


    </RelativeLayout>


</RelativeLayout>